<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    tools:context=".GroupMakeActivity">

    <EditText
        android:id="@+id/groupmake_edittext_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="그룹 이름 (필수)"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/groupmake_edittext_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="그룹 설명"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupmake_edittext_name" />

    <LinearLayout
        android:id="@+id/groupmake_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupmake_edittext_description">

        <TextView
            android:id="@+id/groupmake_textview_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="과목 태그 (1개 이상)" />

        <EditText
            android:id="@+id/groupmake_edittext_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="# 태그 (필수)"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="167dp" />

        <EditText
            android:id="@+id/groupmake_edittext_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="# 태그"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="241dp" />

        <EditText
            android:id="@+id/groupmake_edittext_tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="# 태그"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="314dp" />

        <EditText
            android:id="@+id/groupmake_edittext_tag4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="# 태그"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="380dp" />

        <EditText
            android:id="@+id/groupmake_edittext_tag5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="# 태그"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="447dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupmake_linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupmake_linearlayout">

        <TextView
            android:id="@+id/groupmake_textview_maxnumpeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:text="최대 인원" />

        <Spinner
            android:id="@+id/groupmake_spinner_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="449dp" />

        <TextView
            android:id="@+id/groupmake_textview_privatepublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="공개 여부" />

        <Spinner
            android:id="@+id/groupmake_spinner_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="449dp" />
    </LinearLayout>

    <Button
        android:id="@+id/groupmake_btn_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/make"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupmake_linearlayout" />

</android.support.constraint.ConstraintLayout>