<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    tools:context=".Service.TendencyActivity">

    <LinearLayout
        android:id="@+id/tendency_linearlayout_rule"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tendency_textview_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="규칙"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/tendency_radiogroup_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tendency_radiobtn_rule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="자유로움"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/tendency_radiobtn_rule2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="보통"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/tendency_radiobtn_rule3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="엄격함"
                android:textColor="@android:color/background_dark" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tendency_linearlayout_learning"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tendency_linearlayout_rule">

        <TextView
            android:id="@+id/tendency_textview_learning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="학습량"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/tendency_radiogroup_learning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="112dp">

            <RadioButton
                android:id="@+id/tendency_radiobtn_learning1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="적음"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/tendency_radiobtn_learning2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="보통"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/tendency_radiobtn_learning3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="많음"
                android:textColor="@android:color/background_dark" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tendency_linearlayout_people"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tendency_linearlayout_learning">

        <TextView
            android:id="@+id/tendency_textview_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="인원"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/tendency_radiogroup_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/tendency_radiobtn_people1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="적음"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/tendency_radiobtn_people2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="보통"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/tendency_radiobtn_people3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="많음"
                android:textColor="@android:color/background_dark" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tendency_linearlayout_friendship"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tendency_linearlayout_people">

        <TextView
            android:id="@+id/tendency_textview_friendship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="친목"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/tendency_radiogroup_friendship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="291dp">

            <RadioButton
                android:id="@+id/tendency_radiobtn_friendship1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="적음"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/tendency_radiobtn_friendship2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="보통"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/tendency_radiobtn_friendship3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="많음"
                android:textColor="@android:color/background_dark" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tendency_linearlayout_env"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tendency_linearlayout_friendship">

        <TextView
            android:id="@+id/tendency_textview_env"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="환경"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/tendency_radiogroup_env"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tendency_radiobtn_env1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="정적"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/tendency_radiobtn_env2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="보통"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/tendency_radiobtn_env3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="동적"
                android:textColor="@android:color/background_dark" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tendency_linearlayout_style"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tendency_linearlayout_env">

        <TextView
            android:id="@+id/tendency_textview_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="스타일"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/tendency_radiogroup_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tendency_radiobtn_style1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="암기 위주"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/tendency_radiobtn_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="보통"
                android:textColor="@android:color/background_dark" />

            <RadioButton
                android:id="@+id/tendency_radiobtn_style3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이해 위주"
                android:textColor="@android:color/background_dark" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/tendency_btn_sumit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tendency_linearlayout_style" />
</android.support.constraint.ConstraintLayout>